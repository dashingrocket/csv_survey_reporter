#!/usr/bin/env ruby
require 'rubygems'
require 'bundler/setup'

require 'fileutils'
require 'trollop'

require_relative '../lib/cp_net_survey_reporter'

TEMPLATE_FILE = File.join(__dir__, '..', 'app', 'views', 'report.html.erb')

opts = Trollop::options do
  version "cp_net_survey_reporter #{CpNetSurveyReporter::VERSION}"
  opt :input, 'CSV File to process', type: :string, required: true
  opt :output, 'Report output directory', type: :string, required: true
end

generator = CpNetSurveyReporter::ReportGenerator.new(opts[:output])
report = CpNetSurveyReporter::Report.new(opts[:input], 'Crystal Park Internet Survey Report')
generator.generate(report, TEMPLATE_FILE)
